<div style='background-image: url("http://blog.lecarnetdesbars.fr/wp-content/uploads/2016/01/blue-bird-bar-serre-chevalier-monetier.jpg"); background-size: cover; height: 60vh; padding-top : 25vh; margin-bottom: 70px;'>
  <h1 class="text-center" style="color: white; text-shadow: 1px 1px 15px black;">Your cocktail list</h1>
  <div class="text-center padded">
    <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>



<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <% if cocktail.photo = nil %>
             <div class="card-header"></div>
          <% else %>
            <div class="card-header" style="background-image: url('<%= cocktail.photo.url(:standard) %>')"></div>
          <% end %>

          <div class="card-body">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
