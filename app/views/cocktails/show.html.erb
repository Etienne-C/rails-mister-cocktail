<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %><br>
 <br></br>

  <strong>Doses:</strong>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
    Description : <%= dose.description %><br>
    <% ingredient = dose.ingredient_id %>
    Ingredient : <%= Ingredient.find(ingredient).name %>
    <br></br>
    </li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail) %> |
